<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>

    <div class="row">

      <div class="col-sm-6">
        <%= render 'products/reviews' %>
      </div>

      <% if current_user %>
        <div class="col-sm-6">

          <h2>New Review</h2>

          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, class: name %>
          <% end %>

          <%= form_for([@product, @review]) do |f| %>
            <div class="field">
              <%= f.label :review %><br>
              <%= f.text_field :description, class: "form-control", rows: 5 %>
            </div>
            <div class="field">
              <%= f.label :rating %><br>
              <%= f.select :rating, [5, 4, 3, 2, 1], class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>
              
        </div>
      <% end %>
      
      

    </div>


  </article>

</section>
